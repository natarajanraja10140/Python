#slicing in list

a=[1,2,3,4,5]
print(a[0:4])
print(a[:2])
print(a[1:])
print(a[-4])

a=[1,True,'i+2',0.2,[1,2,3,4]]
print(type(a))
print(a[1],"type is ",type(a[1]))
print(a[0],"type is ",type(a[0]))
print(a[2],"type is ",type(a[2]))
print(a[3],"type is ",type(a[3]))
print(a[4],"type is ",type(a[4]))

a=[1,2,3,4,5,6,7,1]
print(a.count(1))
print(len(a))
print(max(a))
print(min(a))
print(a.index(3))


a=[1,2,3,4,5]
print(a)
a.clear()
print(a)
a=[1,2,3,4,5]
b=a.copy()
print(b)

